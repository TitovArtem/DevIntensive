<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="wrap_content_width_height">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_parent_width_wrap_content_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_parent_width_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="main_activity_info_line" parent="match_parent_width_wrap_content_height">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
    </style>

    <style name="main_activity_linear_layout_between_icons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/size_large_72</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
    </style>

    <style name="main_activity_edit_text_info" parent="match_parent_width_wrap_content_height">
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="horizontal_separate_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
    </style>

    <style name="vertical_separate_line">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="main_activity_title_repository_stats_container"
        parent="match_parent_width_wrap_content_height">

        <item name="android:background">@color/grey</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/spacing_medial_24</item>
        <item name="android:paddingTop">@dimen/spacing_medial_24</item>
    </style>

    <style name="main_activity_title_repository_stats_cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="main_activity_title_info_text" parent="wrap_content_width_height">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main_activity_title_info_text.description">
        <item name="android:textSize">@dimen/font_normal_14</item>
    </style>

    <style name="main_activity_title_info_text.value">
        <item name="android:textSize">@dimen/font_medium_20</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="main_activity_toolbar">
        <item name="android:theme">@style/AppTheme.PopupOverlay</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="main_activity_user_photo_image_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/profile_image_size</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    
    <style name="main_activity_app_bar_layout" parent="match_parent_width_wrap_content_height">
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:background">@color/color_primary</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="main_activity_fab" parent="wrap_content_width_height">
        <item name="android:src">@drawable/ic_create_black_24dp</item>
        <item name="android:layout_marginRight">@dimen/fab_right_space</item>
    </style>

    <!--  Drawer header styles -->
    <style name="drawer_header_text_view" parent="main_activity_title_info_text">
        android:textSize="@dimen/font_normal_14"
    </style>

    <style name="drawer_header_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_medium_56</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="drawer_header_image_view">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
    </style>

    <style name="drawer_header_relative_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">172dp</item>
        <item name="android:paddingBottom">@dimen/spacing_small_8</item>
        <item name="android:paddingLeft">@dimen/spacing_normal_16</item>
        <item name="android:paddingRight">@dimen/spacing_normal_16</item>
        <item name="android:paddingTop">@dimen/spacing_medial_24</item>
        <item name="android:background">@drawable/header_bg</item>
    </style>
    <!--  End drawer header styles -->


</resources>
