<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.MainActivity"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_coordinator_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:background="@color/color_primary">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/color_primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/user_photo_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_photo"
                    android:fitsSystemWindows="true"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:theme="@style/AppTheme.PopupOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:titleTextColor="@color/white"
                    app:layout_collapseMode="pin">
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Container for repository stats -->
                <LinearLayout
                    style="@style/main_activity_title_repository_stats_container">

                    <LinearLayout
                        style="@style/main_activity_title_repository_stats_cell">

                        <TextView
                            android:id="@+id/github_rating_tv"
                            style="@style/main_activity_title_info_text.value"
                            android:text="5"/>

                        <TextView
                            style="@style/main_activity_title_info_text.description"
                            android:text="@string/title_info_rating"/>
                    </LinearLayout>

                    <View style="@style/vertical_separate_line"/>

                    <LinearLayout
                        style="@style/main_activity_title_repository_stats_cell"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/github_src_lines_tv"
                            style="@style/main_activity_title_info_text.value"
                            android:text="5"/>

                        <TextView
                            style="@style/main_activity_title_info_text.description"
                            android:text="@string/title_info_src_lines"/>
                    </LinearLayout>

                    <View style="@style/vertical_separate_line"/>

                    <LinearLayout
                        style="@style/main_activity_title_repository_stats_cell">

                        <TextView
                            android:id="@+id/github_projects_count_tv"
                            style="@style/main_activity_title_info_text.value"
                            android:text="5"/>

                        <TextView
                            style="@style/main_activity_title_info_text.description"
                            android:text="@string/title_info_projects_count"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Phone number -->
                <LinearLayout
                    style="@style/main_activity_info_line">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_call_black_24dp"/>

                    <LinearLayout
                        style="@style/main_activity_linear_layout_between_icons">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/phone_et"
                                style="@style/main_activity_edit_text_info"
                                android:hint="@string/mobile_number_hint"
                                android:inputType="phone"
                                android:text="+7 (968) 827-73-56"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/call_img"
                        style="@style/icon.right"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"/>
                </LinearLayout>

                <View style="@style/horizontal_separate_line"/>

                <!-- Email -->
                <LinearLayout
                    style="@style/main_activity_info_line">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_email_black_24dp"/>

                    <LinearLayout
                        style="@style/main_activity_linear_layout_between_icons">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/mail_et"
                                style="@style/main_activity_edit_text_info"
                                android:hint="@string/email_hint"
                                android:inputType="textMultiLine"
                                android:text="rbi62007@yandex.ru"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_send_black_24dp"/>
                </LinearLayout>

                <View style="@style/horizontal_separate_line"/>

                <!-- vk.com profile -->
                <LinearLayout
                    style="@style/main_activity_info_line">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_vk_circle_24dp"/>

                    <LinearLayout
                        style="@style/main_activity_linear_layout_between_icons">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/vk_et"
                                style="@style/main_activity_edit_text_info"
                                android:hint="@string/vk_profile_hint"
                                android:inputType="textMultiLine"
                                android:text="vk.com/id9370767"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>

                <View style="@style/horizontal_separate_line"/>

                <!-- github.com profile -->
                <LinearLayout
                    style="@style/main_activity_info_line">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_github_circle_24dp"/>

                    <LinearLayout
                        style="@style/main_activity_linear_layout_between_icons">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/github_et"
                                style="@style/main_activity_edit_text_info"
                                android:hint="@string/repository_hint"
                                android:inputType="textMultiLine"
                                android:text="github.com/TitovArtem/DevIntensive"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>

                <View style="@style/horizontal_separate_line"/>

                <!-- About -->
                <LinearLayout
                    style="@style/main_activity_info_line">

                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_account_circle_black_24dp"/>

                    <LinearLayout
                        style="@style/main_activity_linear_layout_between_icons">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/about_et"
                                style="@style/main_activity_edit_text_info"
                                android:hint="@string/about_hint"
                                android:inputType="textMultiLine"
                                android:text="@string/lorem_ipsum"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
