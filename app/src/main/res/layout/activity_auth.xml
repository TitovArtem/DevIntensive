<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_parent_width_height"
    android:background="@drawable/login_bg"
    android:paddingBottom="@dimen/spacing_medium_32"
    android:paddingLeft="@dimen/spacing_medium_32"
    android:paddingRight="@dimen/spacing_medium_32"
    android:gravity="center"
    tools:context="com.softdesign.devintensive.ui.activities.AuthActivity">
    <LinearLayout
        style="@style/match_parent_width_wrap_content_height"
        android:background="#f9f9f9"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_medial_24"
        android:paddingTop="@dimen/spacing_medial_24"
        android:layout_marginLeft="@dimen/spacing_medial_24"
        android:layout_marginRight="@dimen/spacing_medial_24"
        android:elevation="@dimen/spacing_normal_16">

        <RelativeLayout style="@style/match_parent_width_wrap_content_height">
            <View
                android:id="@+id/left_block"
                android:layout_width="5dp"
                android:layout_height="@dimen/spacing_medial_24"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/material_red"/>
            <TextView
                style="@style/match_parent_width_wrap_content_height"
                android:layout_marginLeft="@dimen/spacing_medial_24"
                android:layout_marginRight="@dimen/spacing_medial_24"
                android:layout_alignBottom="@id/left_block"
                android:fontFamily="sans-serif-medium"
                android:text="@string/activity_auth_login"
                android:textColor="@color/material_red"
                android:textSize="18sp"/>
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/match_parent_width_wrap_content_height"
            android:layout_marginLeft="@dimen/spacing_medial_24"
            android:layout_marginRight="@dimen/spacing_medial_24"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:fontFamily="sans-serif-condensed"
            android:hint="@string/activity_auth_email_hint"
            android:textColorHint="@color/grey_light">
            <EditText
                android:id="@+id/auth_login_email"
                style="@style/match_parent_width_wrap_content_height"
                android:inputType="textEmailAddress"
                android:focusable="true"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/grey"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/match_parent_width_wrap_content_height"
            android:layout_marginLeft="@dimen/spacing_medial_24"
            android:layout_marginRight="@dimen/spacing_medial_24"
            android:fontFamily="sans-serif-condensed"
            android:textColorHint="@color/grey_light">
            <EditText
                android:id="@+id/auth_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:fontFamily="sans-serif-condensed"
                android:hint="@string/activity_auth_password_hint"
                android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/auth_login_button"
            style="@style/wrap_content_width_height"
            android:layout_marginBottom="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:background="@color/material_red"
            android:text="@string/activity_auth_login"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/auth_password_remain"
            style="@style/wrap_content_width_height"
            android:layout_gravity="center"
            android:text="@string/activity_auth_remain_password"
            android:textColor="@color/grey_light"/>
    </LinearLayout>
</RelativeLayout>